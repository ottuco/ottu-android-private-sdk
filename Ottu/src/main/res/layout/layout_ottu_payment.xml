<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentsTitle"
        style="@style/Ottu.TextAppearance.TitleLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_payment_method"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Ottu.ui.payment.OttuPaymentSelectionView
        android:id="@+id/btnSelectedPayment"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_select_payment_rounded"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentsTitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>
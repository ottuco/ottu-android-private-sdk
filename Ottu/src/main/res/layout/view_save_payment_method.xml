<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Container.Secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="25dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="13dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="@dimen/default_padding_large"
    app:contentPaddingLeft="@dimen/default_padding_medium"
    app:contentPaddingRight="@dimen/default_padding_large"
    app:contentPaddingTop="@dimen/default_padding_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSaveMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding_medium"
            app:layout_constraintEnd_toStartOf="@id/tvSaveMethodTitle"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_save_payment_method" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSaveMethodTitle"
            style="@style/Ottu.TextAppearance.TitleMedium3"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/default_padding_medium"
            android:ellipsize="end"
            android:lines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/ivSaveMethod"
            app:layout_constraintEnd_toStartOf="@id/switchSaveMethod"
            app:layout_constraintStart_toEndOf="@id/ivSaveMethod"
            app:layout_constraintTop_toTopOf="@id/ivSaveMethod"
            tools:text="Save Payment Method" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSaveMethodDescription"
            style="@style/Ottu.TextAppearance.TitleSmall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding_medium"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchSaveMethod"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tvSaveMethodTitle"
            app:layout_constraintTop_toBottomOf="@id/tvSaveMethodTitle"
            tools:text="Saved payment methods dont require data entry with each payment process" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchSaveMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:theme="@style/Widget.Ottu.Switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
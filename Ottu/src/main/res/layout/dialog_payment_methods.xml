<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewDragHandle"
        style="@style/Theme.BottomSheet.DragHandle"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentMethodTitle"
        style="@style/Ottu.TextAppearance.TitleMedium2"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/title_selected_payment_method"
        app:layout_constraintBottom_toTopOf="@id/rvPaymentMethods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDragHandle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPaymentMethods"
        style="@style/Theme.Container.Tertiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPaymentMethodTitle"
        tools:itemCount="15"
        tools:listitem="@layout/item_payment_method_full" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.Container.Secondary"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_selected_payment_height"
    android:background="@drawable/button_select_payment_rounded"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/view_payment_selection_horizontal_padding"
    android:paddingEnd="@dimen/view_payment_selection_padding_large">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectedPaymentDescription"
        app:layout_constraintEnd_toStartOf="@id/tvSelectedPayment"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSelectedPayment"
        app:srcCompat="@drawable/ic_payment_method" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelectedPayment"
        style="@style/Ottu.TextAppearance.BodyLarge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="STC Pay"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tvSelectedPaymentDescription"
        app:layout_constraintEnd_toStartOf="@id/tvChangeLabel"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/ivPaymentMethod"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelectedPaymentDescription"
        style="@style/Ottu.TextAppearance.BodySmall1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="****8282"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvSelectedPayment"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tvSelectedPayment"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedPayment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChangeLabel"
        style="@style/Ottu.TextAppearance.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/text_change"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectedPaymentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSelectedPayment" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/view_payment_selection_horizontal_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@id/tvPaymentsTitle"
        app:layout_constraintEnd_toStartOf="@id/tvPaymentsTitle"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPaymentsTitle"
        app:srcCompat="@drawable/ic_payment_method" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentsTitle"
        style="@style/Ottu.TextAppearance.BodyLarge1"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/title_selected_payment_method"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPaymentMethod"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
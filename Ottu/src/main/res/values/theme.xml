<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.OttuPaymentSdk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradiunt_green</item>
        <item name="colorPrimaryVariant">@color/gradiunt_green</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnSurfaceVariant">@color/grayScale12</item>
        <item name="colorSurfaceContainerLow">@color/grayScale5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gradiunt_green</item>
        <item name="bottomSheetDialogTheme">@style/Ottu.BottomSheetDialog</item>

    </style>

    <style name="MyDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="Theme.Container.Primary" parent="Theme.OttuPaymentSdk">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Container.Secondary" parent="Theme.OttuPaymentSdk">
        <item name="android:backgroundTint">@color/grayScale4</item>
    </style>

    <style name="Theme.Container.Tertiary" parent="Theme.OttuPaymentSdk">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/grayScale1</item>
    </style>

    <style name="Theme.TextAppearance.TitleMedium1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/grayScale2</item>
    </style>

    <style name="Theme.TextAppearance.TitleMedium2" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.TextAppearance.TitleMedium3" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/grayScale9</item>
    </style>

    <style name="Theme.TextAppearance.TitleSmall1" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/grayScale2</item>
    </style>

    <style name="Theme.TextAppearance.TitleSmall2" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/grayScale15</item>
    </style>

    <style name="Theme.TextAppearance.TitleSmall3" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/grayScale15</item>
    </style>

    <style name="Theme.TextAppearance.BodyLarge1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/grayScale1</item>
    </style>

    <style name="Theme.TextAppearance.BodyLarge2" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/grayScale1</item>
    </style>

    <style name="Theme.TextAppearance.BodyMedium1" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/grayScale2</item>
    </style>

    <style name="Theme.TextAppearance.BodyMedium2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/grayScale2</item>
    </style>

    <style name="Theme.TextAppearance.BodySmall1" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/grayScale10</item>
    </style>

    <style name="Theme.TextAppearance.BodySmall2" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/purpleScale1</item>
    </style>

    <style name="Theme.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/grayScale3</item>
    </style>

    <style name="Theme.TextAppearance.LabelSmall1" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/grayScale2</item>
    </style>

    <style name="Theme.TextAppearance.LabelSmall2" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/grayScale15</item>
    </style>

    <style name="Theme.TextAppearance.Button" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/selector_text_button_payment</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.Ottu.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ottu.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

    <style name="ThemeOverlay.Ottu.TextInputLayout" parent="">
        <item name="colorPrimary">@color/purpleScale1</item>
        <item name="colorOnSurface">@color/grayScale9</item>
        <item name="colorError">@color/redScale1</item>
        <item name="colorControlActivated">@color/purpleScale1</item>
        <item name="hintTextAppearance">@style/Ottu.TextAppearance.BodySmall2</item>
        <item name="textAppearanceTitleMedium">@style/Ottu.TextAppearance.TitleMedium3</item>
        <item name="textAppearanceBodySmall">@style/Ottu.TextAppearance.BodySmall2</item>
        <item name="editTextStyle">@style/Theme.Ottu.TextInputEditText</item>
    </style>

    <style name="Theme.Ottu.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/grayScale9</item>
    </style>

    <style name="Theme.Button" parent="TextAppearance.MaterialComponents.Button"/>

    <style name="Theme.BottomSheet.DragHandle" parent="">
        <item name="android:background">@drawable/bottom_sheet_drag_handle</item>
        <item name="android:backgroundTint">@color/grayScale12</item>
    </style>

    <style name="Theme.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Ottu.BottomSheetDialog.ShapeAppearance</item>
        <item name="backgroundTint">@color/grayScale5</item>
    </style>

    <style name="Widget.Ottu.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ottu.Switch</item>
    </style>

    <style name="ThemeOverlay.Ottu.Switch" parent="">
        <item name="colorSurfaceContainerHighest">@color/grayScale18</item>
        <item name="colorSurfaceVariant">@color/grayScale12</item>
        <item name="colorOutline">@color/grayScale12</item>
        <item name="colorPrimary">@color/blueScale2</item>
        <item name="colorOnPrimary">@color/blueScale1</item>
        <item name="colorOnSurfaceVariant">@color/grayScale12</item>
        <item name="colorPrimaryContainer">@color/blueScale1</item>
    </style>

    <style name="Widget.Ottu.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator.Medium">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ottu.CircularProgressIndicator</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorSize">48dp</item>
    </style>

    <style name="ThemeOverlay.Ottu.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/grayScale18</item>
    </style>

</resources>